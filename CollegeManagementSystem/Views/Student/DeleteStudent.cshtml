@model Student
@{
    ViewData["Title"] = "Delete Student";
}
<div class="text-center">
    <h3>Are you sure you want to delete student @Model.name?</h3>

</div>
<a class="btn btn-outline-primary btn-block" role="button" asp-controller="Student" asp-action="IndexStudent">Cancel</a>
<a class="btn btn-outline-danger btn-block" role="button" asp-route-id="@Model.Id" asp-controller="Student" asp-action="StudentExclusion">Delete</a>
