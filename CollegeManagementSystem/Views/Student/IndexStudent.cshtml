@model List<Student>
@{
    ViewData["Title"] = "Students";
}
<div class="text-center">
    <div class="d-grip gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-outline-success" role="button" asp-controller="Student" asp-action="CreateStudent">Add new student</a>
    </div>
    <br />
    <h1 class="display-4">Students List</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Registration Number</th>
                <th scope="col">Name</th>
                <th scope="col">Birthday</th>
                <th scope="col">Course</th>
                <th scope="col">Grades</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (Student student in Model)
                {
                    <tr>
                        <th scope="row">@student.Id</th>
                        <td>@student.registrationNumber</td>
                        <td>@student.name</td>
                        <td>@student.birthday</td>
                        <td>test</td>
                        <td>test</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-outline-primary" asp-route-id="@student.Id" asp-controller="Student" asp-action="EditStudent">Edit</a>
                                <a role="button" class="btn btn-outline-danger" asp-route-id="@student.Id" asp-controller="Student" asp-action="DeleteStudent">Delete</a>
                            </div>
                        </td>
                            
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

